NEXT_PUBLIC_API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Stellar Network
# Options: testnet | mainnet | futurenet
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STELLAR_NETWORK=testnet

# Horizon REST API
# testnet → https://horizon-testnet.stellar.org
# mainnet → https://horizon.stellar.org
NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Soroban RPC (required for smart-contract / Soroban interactions)
# testnet → https://soroban-testnet.stellar.org
# mainnet → https://soroban-mainnet.stellar.com
NEXT_PUBLIC_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Network passphrase — must match NEXT_PUBLIC_STELLAR_NETWORK
# testnet  → "Test SDF Network ; September 2015"
# mainnet  → "Public Global Stellar Network ; September 2015"
NEXT_PUBLIC_STELLAR_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# -----------------------------------------------------------------------------
# Wallet Kit — @creit-tech/stellar-wallets-kit
# https://stellarwalletskit.dev
# -----------------------------------------------------------------------------

# --- WalletConnect (required for mobile wallets: LOBSTR, xBull, etc.) --------
# Get your project ID at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# App metadata shown inside WalletConnect-compatible wallets
NEXT_PUBLIC_WALLET_APP_NAME=StellarAid
NEXT_PUBLIC_WALLET_APP_DESCRIPTION=Stellar-powered aid distribution platform
NEXT_PUBLIC_WALLET_APP_URL=https://stellaraid.app
NEXT_PUBLIC_WALLET_APP_ICON=https://stellaraid.app/icon.png

# --- Freighter (browser extension by SDF) ------------------------------------
NEXT_PUBLIC_FREIGHTER_SHOW_WHEN_MISSING=true

# --- Albedo (web popup wallet) -----------------------------------------------
NEXT_PUBLIC_ALBEDO_CALLBACK_URL=http://localhost:3000/albedo-callback

# --- LOBSTR ------------------------------------------------------------------
# LOBSTR connects via WalletConnect — no extra env needed beyond project ID.
# Set to "true" to include LOBSTR as a wallet option.
NEXT_PUBLIC_LOBSTR_ENABLED=true

# --- Rabet (browser extension) -----------------------------------------------
# Network sent to Rabet: TESTNET | MAINNET
NEXT_PUBLIC_RABET_NETWORK=TESTNET

# --- xBull Wallet ------------------------------------------------------------
# xBull connects via WalletConnect — no extra env needed beyond project ID.
NEXT_PUBLIC_XBULL_ENABLED=true

# --- Hana Wallet -------------------------------------------------------------
NEXT_PUBLIC_HANA_ENABLED=false

# --- Default wallet shown first in the modal ---------------------------------
# Options: freighter | albedo | walletconnect | lobstr | rabet | xbull | hana
NEXT_PUBLIC_DEFAULT_WALLET=freighter

# -----------------------------------------------------------------------------
# Third-Party Services
# -----------------------------------------------------------------------------

# SEP-6 / SEP-24 anchor endpoint (leave blank if not using anchors)
NEXT_PUBLIC_ANCHOR_URL=

# StellarExpert base URL (used for tx/account deep links)
NEXT_PUBLIC_STELLAR_EXPERT_URL=https://stellar.expert/explorer/testnet

# CoinGecko API key (optional — free tier works without one, but rate-limited)
NEXT_PUBLIC_COINGECKO_API_KEY=

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics measurement ID (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# -----------------------------------------------------------------------------
# Server-Only Variables — NEVER prefix these with NEXT_PUBLIC_
# These are never exposed to the browser.
# -----------------------------------------------------------------------------

# Secret key for signing JWTs / sessions (min 32 chars)
# Generate: openssl rand -hex 32
AUTH_SECRET=change-me-to-a-random-32-char-string

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/stellaraid

# Stellar admin/service account secret key for server-side signing
# NEVER expose this to the client — keep it server-only
STELLAR_ADMIN_SECRET_KEY=

# Redis URL for caching / rate-limiting (optional)
REDIS_URL=redis://localhost:6379
